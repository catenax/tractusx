{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "SwaggerEnabled": "",
  "Registration": {
    "KeyCloakClientID": "catenax-registration",
    "BasePortalAddress": "https://test.azurewebsites.net"
  },
  "PostgresConnectionString": "http://localhost:8080",
  "CDQ_Address": "",
  "CDQ_SubscriptionKey": "",
  "CDQ_Enabled": "",
  "BPN_Address": "",
  "Custodian": {
    "Username": "",
    "Password": "",
    "ClientId": "",
    "GrantType": "",
    "ClientSecret": "",
    "Scope": "",
    "KeyCloakTokenAdress": "",
    "BaseAdress": ""
  },
  "MailingService": {
    "Templates": {
      "invite": {
        "Subject": "Invitation to Catena-X",
        "Body": "{nameCreatedBy} from your company {companyname} invited you to participate in Catena-X.\n\nStart in the Registration-App:\nURL: {url}\nUsername: {username}\nThe password was sent within a separate e-mail."
      },
      "inviteWithMessage": {
        "Subject": "Invitation to Catena-X",
        "Body": "{nameCreatedBy} from your company {companyname} invited you to participate in Catena-X and left you the following message:\n{message}.\n\nStart in the Registration-App:\nURL: {url}\nUsername: {username}\nThe password was sent within a separate e-mail."
      },
      "password": {
        "Subject": "Password for Invitation to Catena-X",
        "Body": "Please use this password to onboard to Catena-X: {password}"
      }
    },
    "Mail": {
      "SmtpHost": "",
      "SmtpUser": "",
      "SmtpPassword": ""
    }
  },
  "Keycloak": {
    "central": {
      "ConnectionString": "",
      "ClientId": "",
      "ClientSecret": "",
      "AuthRealm": ""
    },
    "shared": {
      "ConnectionString": "",
      "ClientId": "",
      "ClientSecret": "",
      "AuthRealm": ""
    }
  },
  "JwtBearerOptions": {
    "RequireHttpsMetadata": false,
    "MetadataAddress": "",
    "SaveToken": true,
    "TokenValidationParameters": {
      "ValidateIssuer": true,
      "ValidIssuer": "",
      "ValidateIssuerSigningKey": true,
      "ValidAudience": "",
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ClockSkew": 600000
    }
  },
  "Provisioning": {
    "CentralRealm": "",
    "MappedIdpAttribute": "tenant",
    "MappedCompanyAttribute": "organisation",
    "UserNameMapperTemplate": "${ALIAS}.${CLAIM.sub}",
    "SharedUser": {
      "enabled":true,
      "emailVerified":true,
      "requiredActions":["UPDATE_PASSWORD"]
    },
    "CentralUser": {
      "enabled":true,
      "emailVerified":true
    }
  }
}
