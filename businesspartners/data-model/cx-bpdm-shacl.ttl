@prefix bpmd: <http://catena-x.net/bpdm#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix shapes: <http://catena-x.net/bpdm/shacl#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@base <http://catena-x.net/bpdm/shacl> .


shapes:AddressShape
    a sh:NodeShape ;
    sh:targetClass bpmd:Address ;

    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasAddressVersion ;
      sh:class bpmd:AddressVersion ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasAdministrativeArea ;
      sh:class bpmd:AdministrativeArea ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasLocality ;
      sh:class bpmd:Locality ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasPostCode ;
      sh:class bpmd:PostCode ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasPremise ;
      sh:class bpmd:Premise ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasThoroughfare ;
      sh:class bpmd:Thoroughfare ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasIdentifier ;
      sh:class bpmd:Identifier ;
      sh:minCount 1 ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasAddressType ;
      sh:class bpmd:AddressType ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasCountry ;
      sh:class bpmd:Country ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ] ;
    sh:property [
      a sh:PropertyShape ;
      sh:path bpmd:hasCareOf ;
      sh:class bpmd:CareOf ;
      sh:maxCount 1 ;
    ] ;
    sh:severity sh:Violation ;
.

shapes:BusinessPartnerClassificationShape
    a sh:NodeShape ;
    sh:targetClass bpmd:BusinessPartnerClassification ;

    sh:property [
          a sh:PropertyShape ;
          sh:path bpmd:hasElement ;
          sh:class bpmd:ClassificationType ;
          sh:minCount 1 ;
          sh:severity sh:Violation ;
     ] ;
.

# :TestClass rdf:type owl:Class .