FROM gcr.io/distroless/java-debian10:11
COPY app.jar /app/app.jar
WORKDIR /app
USER nonroot

ENV WEB_HTTP_PORT=""
ENV IDS_WEBHOOK_ADDRESS=""
ENV EDC_OAUTH_TOKEN_URL=""
ENV EDC_OAUTH_CLIENT_ID=""
ENV EDC_OAUTH_PROVIDER_AUDIENCE=""
ENV EDC_OAUTH_PROVIDER_JWKS_URL=""
ENV EDC_OAUTH_PUBLIC_KEY_ALIAS=""
ENV EDC_OAUTH_PRIVATE_KEY_ALIAS=""

ENV EDC_VAULT=""
ENV EDC_KEYSTORE=""
ENV EDC_KEYSTORE_PASSWORD=""
ENV EDC_API_CONTROL_AUTH_APIKEY_VALUE=""

ENTRYPOINT ["java","-jar","/app/app.jar"]
